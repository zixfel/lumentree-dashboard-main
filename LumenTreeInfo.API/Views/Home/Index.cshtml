@{
    ViewData["Title"] = "Dashboard";
}

<!-- Search & Filter Section -->
<div class="mb-8">
    <div class="bg-white/80 dark:bg-gray-800/80 backdrop-blur-xl rounded-2xl shadow-xl border border-gray-200 dark:border-gray-700 p-6 md:p-8">
        <h2 class="text-lg md:text-xl font-semibold mb-6 flex items-center">
            <svg class="w-5 h-5 mr-2 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
            </svg>
            Device Monitor
        </h2>
        
        <div class="grid grid-cols-1 md:grid-cols-12 gap-4">
            <!-- Device ID Input -->
            <div class="md:col-span-5">
                <label for="deviceId" class="block text-sm font-medium mb-2 text-gray-700 dark:text-gray-300">
                    Device ID
                </label>
                <input type="text" 
                       id="deviceId" 
                       placeholder="P123456789" 
                       value=""
                       class="w-full px-4 py-3 border-2 border-gray-200 dark:border-gray-600 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent dark:bg-gray-700 dark:text-white transition-all duration-300">
            </div>

            <!-- Date Selector -->
            <div class="md:col-span-5">
                <label for="dateInput" class="block text-sm font-medium mb-2 text-gray-700 dark:text-gray-300">
                    Date
                </label>
                <div class="flex space-x-2">
                    <button id="prevDay" 
                            class="px-4 py-3 bg-gradient-to-br from-gray-100 to-gray-200 dark:from-gray-700 dark:to-gray-600 rounded-xl hover:shadow-lg transition-all duration-300 group">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 group-hover:-translate-x-1 transition-transform" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
                        </svg>
                    </button>
                    <input type="date" 
                           id="dateInput"
                           class="flex-grow px-4 py-3 border-2 border-gray-200 dark:border-gray-600 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent dark:bg-gray-700 dark:text-white transition-all duration-300">
                    <button id="nextDay" 
                            class="px-4 py-3 bg-gradient-to-br from-gray-100 to-gray-200 dark:from-gray-700 dark:to-gray-600 rounded-xl hover:shadow-lg transition-all duration-300 group">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 group-hover:translate-x-1 transition-transform" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                        </svg>
                    </button>
                </div>
            </div>

            <!-- View Button -->
            <div class="md:col-span-2 flex items-end">
                <button id="viewBtn" 
                        class="w-full px-6 py-3 bg-gradient-to-r from-blue-500 to-green-500 hover:from-blue-600 hover:to-green-600 text-white font-semibold rounded-xl shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-300">
                    <span class="flex items-center justify-center">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                        </svg>
                        View
                    </span>
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Device Information Panel -->
<div id="deviceInfo" class="mb-8 hidden animate-fade-in">
    <div class="bg-white/80 dark:bg-gray-800/80 backdrop-blur-xl rounded-2xl shadow-xl border border-gray-200 dark:border-gray-700 p-6">
        <h2 class="text-xl font-semibold mb-4 flex items-center">
            <svg class="w-6 h-6 mr-2 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            Device Information
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div class="bg-gradient-to-br from-blue-50 to-blue-100 dark:from-blue-900/30 dark:to-blue-800/30 p-4 rounded-xl border border-blue-200 dark:border-blue-700">
                <div class="text-sm text-blue-700 dark:text-blue-300 font-medium mb-1">Device ID</div>
                <div id="device-id" class="text-lg font-bold text-blue-900 dark:text-blue-100"></div>
            </div>
            <div class="bg-gradient-to-br from-purple-50 to-purple-100 dark:from-purple-900/30 dark:to-purple-800/30 p-4 rounded-xl border border-purple-200 dark:border-purple-700">
                <div class="text-sm text-purple-700 dark:text-purple-300 font-medium mb-1">Device Type</div>
                <div id="device-type" class="text-lg font-bold text-purple-900 dark:text-purple-100"></div>
            </div>
            <div class="bg-gradient-to-br from-green-50 to-green-100 dark:from-green-900/30 dark:to-green-800/30 p-4 rounded-xl border border-green-200 dark:border-green-700">
                <div class="text-sm text-green-700 dark:text-green-300 font-medium mb-1">Status</div>
                <div id="device-status" class="text-lg font-bold text-green-900 dark:text-green-100"></div>
            </div>
        </div>
    </div>
</div>

<!-- Real-Time Energy Flow Display -->
<div id="realTimeFlow" class="mb-8 hidden animate-fade-in">
    <div class="bg-white/80 dark:bg-gray-800/80 backdrop-blur-xl rounded-2xl shadow-xl border border-gray-200 dark:border-gray-700 p-6">
        <h2 class="text-xl font-semibold mb-6 flex items-center">
            <svg class="w-6 h-6 mr-2 text-yellow-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
            Real-Time Energy Flow
        </h2>

        <div class="relative">
            <!-- Energy Flow Grid -->
            <div class="grid grid-cols-3 gap-6">
                <!-- ROW 1: PV, Device, Grid -->
                <!-- PV Panel (Solar) -->
                <div class="energy-card bg-gradient-to-br from-yellow-50 to-amber-100 dark:from-yellow-900/30 dark:to-amber-800/30 rounded-2xl p-6 border-2 border-yellow-200 dark:border-yellow-700 shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1">
                    <div class="flex flex-col items-center justify-center h-full space-y-3">
                        <div class="relative">
                            <img src="/images/icons/pv.png" alt="Solar Panel" class="w-16 h-16" id="pv-icon">
                            <div class="absolute -top-1 -right-1 w-4 h-4 bg-yellow-400 rounded-full animate-ping"></div>
                        </div>
                        <div class="text-center w-full">
                            <div class="text-sm font-semibold text-yellow-700 dark:text-yellow-300 mb-1">Solar PV</div>
                            <div class="text-2xl font-bold text-yellow-600 dark:text-yellow-300" id="pv-power">-</div>
                            <div class="text-xs text-gray-600 dark:text-gray-400 mt-1" id="pv-desc">-</div>
                        </div>
                    </div>
                </div>

                <!-- Device (Center) -->
                <div class="energy-card bg-gradient-to-br from-gray-50 to-gray-100 dark:from-gray-800 dark:to-gray-700 rounded-2xl p-6 border-2 border-gray-300 dark:border-gray-600 shadow-lg">
                    <div class="flex flex-col items-center justify-center h-full space-y-3">
                        <img src="/images/icons/device.png" alt="Inverter" class="w-16 h-16">
                        <div class="text-center w-full">
                            <div class="text-xl font-bold text-gray-700 dark:text-gray-200" id="inverter-type">Inverter</div>
                            <div class="text-sm text-gray-600 dark:text-gray-400 mt-1" id="device-temp">-</div>
                        </div>
                    </div>
                </div>

                <!-- Grid -->
                <div class="energy-card bg-gradient-to-br from-purple-50 to-indigo-100 dark:from-purple-900/30 dark:to-indigo-800/30 rounded-2xl p-6 border-2 border-purple-200 dark:border-purple-700 shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1">
                    <div class="flex flex-col items-center justify-center h-full space-y-3">
                        <div class="relative">
                            <img src="/images/icons/grid.png" alt="Grid" class="w-16 h-16" id="grid-icon">
                            <div class="absolute -top-1 -right-1 w-4 h-4 bg-purple-400 rounded-full animate-pulse"></div>
                        </div>
                        <div class="text-center w-full">
                            <div class="text-sm font-semibold text-purple-700 dark:text-purple-300 mb-1">Power Grid</div>
                            <div class="text-2xl font-bold text-purple-600 dark:text-purple-300" id="grid-power">-</div>
                            <div class="text-xs text-gray-600 dark:text-gray-400 mt-1" id="grid-voltage">-</div>
                        </div>
                    </div>
                </div>

                <!-- ROW 2: Battery, Essential Load, Home Load -->
                <!-- Battery -->
                <div class="energy-card bg-gradient-to-br from-green-50 to-emerald-100 dark:from-green-900/30 dark:to-emerald-800/30 rounded-2xl p-6 border-2 border-green-200 dark:border-green-700 shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1">
                    <div class="flex flex-col items-center justify-center h-full space-y-3">
                        <div class="relative">
                            <img src="/images/icons/bat_medium.png" alt="Battery" class="w-16 h-16" id="battery-icon">
                            <div class="absolute inset-0 flex items-center justify-center">
                                <span class="text-white text-lg font-bold drop-shadow-lg" id="battery-percentage">-</span>
                            </div>
                        </div>
                        <div class="text-center w-full">
                            <div class="text-sm font-semibold text-green-700 dark:text-green-300 mb-1">Battery</div>
                            <div class="text-2xl font-bold text-green-600 dark:text-green-300" id="battery-power">-</div>
                        </div>
                    </div>
                </div>

                <!-- Essential Load -->
                <div class="energy-card bg-gradient-to-br from-orange-50 to-amber-100 dark:from-orange-900/30 dark:to-amber-800/30 rounded-2xl p-6 border-2 border-orange-200 dark:border-orange-700 shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1">
                    <div class="flex flex-col items-center justify-center h-full space-y-3">
                        <div class="relative">
                            <img src="/images/icons/essential_load.png" alt="Essential Load" class="w-16 h-16" id="essential-icon">
                            <div class="absolute -top-1 -right-1 w-4 h-4 bg-orange-400 rounded-full animate-pulse"></div>
                        </div>
                        <div class="text-center w-full">
                            <div class="text-sm font-semibold text-orange-700 dark:text-orange-300 mb-1">Essential</div>
                            <div class="text-2xl font-bold text-orange-600 dark:text-orange-300" id="essential-power">-</div>
                        </div>
                    </div>
                </div>

                <!-- Home Load -->
                <div class="energy-card bg-gradient-to-br from-red-50 to-rose-100 dark:from-red-900/30 dark:to-rose-800/30 rounded-2xl p-6 border-2 border-red-200 dark:border-red-700 shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1">
                    <div class="flex flex-col items-center justify-center h-full space-y-3">
                        <div class="relative">
                            <img src="/images/icons/home_load.png" alt="Home Load" class="w-16 h-16" id="load-icon">
                            <div class="absolute -top-1 -right-1 w-4 h-4 bg-red-400 rounded-full animate-pulse"></div>
                        </div>
                        <div class="text-center w-full">
                            <div class="text-sm font-semibold text-red-700 dark:text-red-300 mb-1">Home Load</div>
                            <div class="text-2xl font-bold text-red-600 dark:text-red-300" id="load-power">-</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Summary Statistics Cards -->
<div id="summaryStats" class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4 mb-8 hidden animate-fade-in">
    <div id="pv-card" class="stat-card group cursor-pointer bg-gradient-to-br from-yellow-100 to-yellow-200 dark:from-yellow-900/50 dark:to-yellow-800/50 p-5 rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 border border-yellow-300 dark:border-yellow-700">
        <div class="flex items-center justify-between mb-2">
            <div class="text-sm font-medium text-yellow-800 dark:text-yellow-200">PV Production</div>
            <svg class="w-4 h-4 text-yellow-600 group-hover:scale-110 transition-transform" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"/>
                <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd"/>
            </svg>
        </div>
        <div id="pv-total" class="text-2xl font-bold text-yellow-700 dark:text-yellow-300"></div>
    </div>
    
    <div id="bat-charge-card" class="stat-card group cursor-pointer bg-gradient-to-br from-green-100 to-green-200 dark:from-green-900/50 dark:to-green-800/50 p-5 rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 border border-green-300 dark:border-green-700">
        <div class="flex items-center justify-between mb-2">
            <div class="text-sm font-medium text-green-800 dark:text-green-200">Battery Charge</div>
            <svg class="w-4 h-4 text-green-600 group-hover:scale-110 transition-transform" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"/>
                <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd"/>
            </svg>
        </div>
        <div id="bat-charge" class="text-2xl font-bold text-green-700 dark:text-green-300"></div>
    </div>
    
    <div id="bat-discharge-card" class="stat-card group cursor-pointer bg-gradient-to-br from-red-100 to-red-200 dark:from-red-900/50 dark:to-red-800/50 p-5 rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 border border-red-300 dark:border-red-700">
        <div class="flex items-center justify-between mb-2">
            <div class="text-sm font-medium text-red-800 dark:text-red-200">Battery Discharge</div>
            <svg class="w-4 h-4 text-red-600 group-hover:scale-110 transition-transform" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"/>
                <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd"/>
            </svg>
        </div>
        <div id="bat-discharge" class="text-2xl font-bold text-red-700 dark:text-red-300"></div>
    </div>
    
    <div id="load-card" class="stat-card group cursor-pointer bg-gradient-to-br from-blue-100 to-blue-200 dark:from-blue-900/50 dark:to-blue-800/50 p-5 rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 border border-blue-300 dark:border-blue-700">
        <div class="flex items-center justify-between mb-2">
            <div class="text-sm font-medium text-blue-800 dark:text-blue-200">Home Load</div>
            <svg class="w-4 h-4 text-blue-600 group-hover:scale-110 transition-transform" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"/>
                <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd"/>
            </svg>
        </div>
        <div id="load-total" class="text-2xl font-bold text-blue-700 dark:text-blue-300"></div>
    </div>
    
    <div id="grid-card" class="stat-card group cursor-pointer bg-gradient-to-br from-purple-100 to-purple-200 dark:from-purple-900/50 dark:to-purple-800/50 p-5 rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 border border-purple-300 dark:border-purple-700">
        <div class="flex items-center justify-between mb-2">
            <div class="text-sm font-medium text-purple-800 dark:text-purple-200">Grid Import</div>
            <svg class="w-4 h-4 text-purple-600 group-hover:scale-110 transition-transform" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"/>
                <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd"/>
            </svg>
        </div>
        <div id="grid-total" class="text-2xl font-bold text-purple-700 dark:text-purple-300"></div>
    </div>
    
    <div id="essential-card" class="stat-card group cursor-pointer bg-gradient-to-br from-orange-100 to-orange-200 dark:from-orange-900/50 dark:to-orange-800/50 p-5 rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 border border-orange-300 dark:border-orange-700">
        <div class="flex items-center justify-between mb-2">
            <div class="text-sm font-medium text-orange-800 dark:text-orange-200">Essential</div>
            <svg class="w-4 h-4 text-orange-600 group-hover:scale-110 transition-transform" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"/>
                <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd"/>
            </svg>
        </div>
        <div id="essential-total" class="text-2xl font-bold text-orange-700 dark:text-orange-300"></div>
    </div>
</div>

<!-- Charts Section -->
<div id="chart-section" class="hidden space-y-6 animate-fade-in">
    <!-- PV Production Chart -->
    <div id="pv-section" class="bg-white/80 dark:bg-gray-800/80 backdrop-blur-xl rounded-2xl shadow-xl border border-gray-200 dark:border-gray-700 p-6">
        <h2 class="text-xl font-semibold mb-4 flex items-center">
            <div class="w-3 h-3 bg-yellow-500 rounded-full mr-3 animate-pulse"></div>
            Solar PV Production
        </h2>
        <div class="chart-container">
            <canvas id="pvChart"></canvas>
        </div>
    </div>

    <!-- Battery Charge/Discharge Chart -->
    <div id="bat-section" class="bg-white/80 dark:bg-gray-800/80 backdrop-blur-xl rounded-2xl shadow-xl border border-gray-200 dark:border-gray-700 p-6">
        <h2 class="text-xl font-semibold mb-4 flex items-center">
            <div class="w-3 h-3 bg-green-500 rounded-full mr-3 animate-pulse"></div>
            Battery Charge/Discharge
        </h2>
        <div class="chart-container">
            <canvas id="batChart"></canvas>
        </div>
    </div>

    <!-- Home Load Consumption Chart -->
    <div id="load-section" class="bg-white/80 dark:bg-gray-800/80 backdrop-blur-xl rounded-2xl shadow-xl border border-gray-200 dark:border-gray-700 p-6">
        <h2 class="text-xl font-semibold mb-4 flex items-center">
            <div class="w-3 h-3 bg-blue-500 rounded-full mr-3 animate-pulse"></div>
            Home Load Consumption
        </h2>
        <div class="chart-container">
            <canvas id="loadChart"></canvas>
        </div>
    </div>

    <!-- Grid Usage Chart -->
    <div id="grid-section" class="bg-white/80 dark:bg-gray-800/80 backdrop-blur-xl rounded-2xl shadow-xl border border-gray-200 dark:border-gray-700 p-6">
        <h2 class="text-xl font-semibold mb-4 flex items-center">
            <div class="w-3 h-3 bg-purple-500 rounded-full mr-3 animate-pulse"></div>
            Grid Import/Export
        </h2>
        <div class="chart-container">
            <canvas id="gridChart"></canvas>
        </div>
    </div>

    <!-- Essential Load Chart -->
    <div id="essential-section" class="bg-white/80 dark:bg-gray-800/80 backdrop-blur-xl rounded-2xl shadow-xl border border-gray-200 dark:border-gray-700 p-6">
        <h2 class="text-xl font-semibold mb-4 flex items-center">
            <div class="w-3 h-3 bg-orange-500 rounded-full mr-3 animate-pulse"></div>
            Essential Load
        </h2>
        <div class="chart-container">
            <canvas id="essentialChart"></canvas>
        </div>
    </div>
</div>

<!-- Loading indicator -->
<div id="loading" class="hidden">
    <div class="flex flex-col items-center justify-center p-12">
        <div class="relative w-20 h-20">
            <div class="absolute top-0 left-0 w-full h-full border-4 border-blue-200 dark:border-blue-900 rounded-full"></div>
            <div class="absolute top-0 left-0 w-full h-full border-4 border-blue-500 dark:border-blue-400 rounded-full animate-spin border-t-transparent"></div>
        </div>
        <p class="mt-4 text-gray-600 dark:text-gray-400 font-medium">Loading energy data...</p>
    </div>
</div>

<!-- Error message -->
<div id="errorMessage" class="hidden">
    <div class="bg-red-50 dark:bg-red-900/30 border-2 border-red-300 dark:border-red-700 rounded-xl p-4 flex items-center space-x-3">
        <svg class="w-6 h-6 text-red-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <span id="errorText" class="text-red-700 dark:text-red-300 font-medium">An error occurred while loading data.</span>
    </div>
</div>

@section Scripts {
    <!-- SignalR Client Library -->
    <script src="https://unpkg.com/@@microsoft/signalr@@latest"></script>

    <link href="~/css/index.css?v=05000" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/index.js?v=05000"></script>
}
